{
    "include": ["module/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "es2021",
        "module": "es2022",
        "moduleResolution": "node",
        "lib": ["es2021", "dom"],
        "outDir": "dist",
        "allowJs": true,
        "rootDir": "module/",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "declaration": true
    },
    "rules": {
        "triple-equals": true,
        "curly": true,
        "strict-boolean-expressions": true,
        "no-unnecessary-condition": true
    }
}
